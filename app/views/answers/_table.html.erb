<table>
  <thead>
    <tr>
      <th>Question</th>
      <th>Description</th>
      <th>Image</th>
      <th>Value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @question.answers.each do |answer| %>
      <tr>
        <td><%= answer.description %></td>
        <td><%= answer.content %></td>
        <td><%= answer.message %></td>
        <td></td>
        <td><%= answer.value %></td>
        <td><%= link_to 'Edit', edit_question_answer_path(@question, answer) %></td>
        <td><%= link_to 'Destroy', [@question, answer], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Answer', new_question_answer_path(@question), :remote => true %>