<table>
  <thead>
    <tr>
      <th>Descripci√≥n</th>
      <% if @question.question_type === "Abierta" %>
        <th>Mensaje</th>
      <% end %>
      <th>Imagen</th>
      <% if @question.question_type === "Cerrada" %>
        <th>Valor</th>
      <% end %>
      <th>Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @question.answers.each do |answer| %>
      <tr>
        <% if @question.question_type === "Cerrada" %>
          <td><p><%= answer.description %></p></td>
        <% end %>
        <% if @question.question_type === "Abierta" %>
          <td><p><%= answer.content %></p></td>
        <% end %>
        <% if @question.question_type === "Abierta" %>
          <td><%= answer.message %></td>
        <% end %>
        <td><% if answer.image.present? %><%= image_tag answer.image %><% end %></td>
        <% if @question.question_type === "Cerrada" %>
          <td><%= answer.value %></td>
        <% end %>
        <td><%= link_to 'Editar', edit_question_answer_path(@question, answer), class: "button" %> <%= link_to 'Eliminar', [@question, answer], method: :delete, data: { confirm: 'Are you sure?' }, class: "button" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Agregar Respuesta', new_question_answer_path(@question), :remote => true, class: "button" %>
