<p id="notice"><%= notice %></p>

<h1>Relations</h1>

<table>
  <thead>
    <tr>
      <th>Question</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @test.relations.each do |relation| %>
      <tr>
        <td><%= relation.identifier %></td>
        <td><%= relation.description %></td>
        <td><%= link_to 'Destroy', [@test, relation], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Relation', new_test_relation_path(@test) %>
